load("@rules_javascript//commonjs:rules.bzl", "cjs_root")
load("@rules_javascript//javascript:rules.bzl", "js_library")
load("@rules_javascript//rollup:rules.bzl", "configure_rollup", "rollup_bundle")

cjs_root(
    name = "root",
    package_name = "@rules-javascript-test/rollup-basic",
    descriptors = ["package.json"],
)

js_library(
    name = "lib",
    srcs = [
        "foo.js",
        "index.js",
    ],
    root = ":root",
)

js_library(
    name = "rollup_config",
    srcs = ["rollup.config.js"],
    root = ":root",
    deps = [
        "@npm//@rollup/plugin-commonjs:lib",
        "@npm//@rollup/plugin-node-resolve:lib",
    ],
)

configure_rollup(
    name = "rollup",
    config = "rollup.config.js",
    config_dep = ":rollup_config",
    dep = "@npm//rollup:lib",
)

rollup_bundle(
    name = "bundle",
    dep = ":lib",
    rollup = ":rollup",
)
