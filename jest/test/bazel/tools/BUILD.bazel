load("@rules_javascript//commonjs:rules.bzl", "cjs_root")
load("@rules_javascript//javascript:rules.bzl", "js_library")
load("@rules_javascript//jest:rules.bzl", "jest_test")

cjs_root(
    name = "root",
    package_name = "@rules-javascript-test/jest-tools",
)

js_library(
    name = "test_lib",
    srcs = glob(["*.spec.js"]),
    root = ":root",
)

js_library(
    name = "jest_config",
    srcs = ["jest.config.js"],
    root = ":root",
)

jest_test(
    name = "test",
    config = "jest.config.js",
    config_dep = ":jest_config",
    data = [":bin"],
    dep = ":test_lib",
    jest = "@npm//jest:lib",
)

sh_binary(
    name = "bin",
    srcs = ["bin.sh"],
)
