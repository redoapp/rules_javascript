load("@rules_javascript//commonjs:rules.bzl", "cjs_root")
load("@rules_javascript//javascript:rules.bzl", "js_export", "js_library")
load("@rules_javascript//jest:rules.bzl", "jest_test")

cjs_root(
    name = "root",
    package_name = "@rules-javascript-test/jest-transform",
)

js_library(
    name = "lib",
    srcs = ["example.js"],
    root = ":root",
)

js_library(
    name = "test_lib",
    srcs = ["example.spec.js"],
    root = ":root",
    deps = [":lib"],
)

js_library(
    name = "jest_config",
    srcs = [
        "babel.config.js",
        "jest.config.js",
    ],
    root = ":root",
)

js_export(
    name = "main",
    dep = ":test_lib",
)

jest_test(
    name = "test",
    config = "jest.config.js",
    config_dep = ":jest_config",
    dep = ":main",
    env = {"DEBUG": "true"},
    jest = "@npm//jest:lib",
)
